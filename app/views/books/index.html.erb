<p class="success"><%= flash[:notice] %></p>
<h1>Books</h1>
<table calss = 'index-table'>
    <thead >
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody class = index-tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%=  book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show' ,book_path(book) %></td>
            <td><%= link_to 'Edit' ,edit_book_path(book) %></td>
            <td><%= link_to 'Destroy',book_path(book),method: :delete, "data-confirm" => "Are you Sure?"%></td>
        </tr>
        <% end %>
    </tbody>
</table>
<h2>New book</h2>

<% if @book.errors.any? %>
<div id = error_explanation><h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
<ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %></ul>
  <% end %>
  </div>

<%= form_with model: @book,local:true do |f| %>
<div class = "field">
<div class = field-errors>
<label>Title</label><br>
<%= f.text_field :title %>
</div>
</div>

<div class = "field">
<%= f.label :body %><br>
<%= f.text_area :body %>
</div>
<%= f.submit 'Create Book'%>


<% end %>